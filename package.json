{
  "name": "firefox-addon",
  "version": "1.0.2",
  "description": "GitHub action for publishing extension to Firefox Add-on",
  "author": "hyperbola",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wdzeng/firefox-addon.git"
  },
  "scripts": {
    "build": "pnpm clean && pnpm transpile && cp action.yml dist",
    "transpile": "esbuild index.ts --platform=node --minify --target=node16 --bundle --outfile=dist/index.cjs",
    "lint": "eslint index.ts --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "axios": "^1.4.0",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^16.18.38",
    "esbuild": "^0.19.0",
    "eslint-config-wdzeng": "github:wdzeng/eslint-config#semver:^0.4.2",
    "typescript": "^5.1.6"
  },
  "packageManager": "pnpm@8.6.9",
  "license": "MIT"
}

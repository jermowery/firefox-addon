{
  "name": "firefox-addon",
  "version": "1.0.2",
  "description": "GitHub action for publishing extension to Firefox Add-on",
  "author": "hyperbola",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wdzeng/firefox-addon.git"
  },
  "packageManager": "pnpm@8.7.6",
  "license": "MIT",
  "scripts": {
    "build": "pnpm clean && pnpm transpile && cp action.yml dist",
    "transpile": "esbuild src/index.ts --platform=node --target=node16 --minify --bundle --outfile=dist/index.cjs",
    "lint": "eslint src --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "axios": "^1.5.0",
    "form-data": "^4.0.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.6.3",
    "esbuild": "^0.19.3",
    "eslint": "^8.50.0",
    "eslint-config-wdzeng": "github:wdzeng/eslint-config#semver:^0.4.4",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "pnpm": {
    "overrides": {
      "array-includes": "npm:@nolyfill/array-includes@latest",
      "array.prototype.findlastindex": "npm:@nolyfill/array.prototype.findlastindex@latest",
      "array.prototype.flat": "npm:@nolyfill/array.prototype.flat@latest",
      "array.prototype.flatmap": "npm:@nolyfill/array.prototype.flatmap@latest",
      "has": "npm:@nolyfill/has@latest",
      "object.fromentries": "npm:@nolyfill/object.fromentries@latest",
      "object.groupby": "npm:@nolyfill/object.groupby@latest",
      "object.values": "npm:@nolyfill/object.values@latest"
    }
  }
}

{
  "compilerOptions": {
    // Environment and module options.
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    // Completeness and emit options.
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    // Type checking options.
    "strict": true,
    "alwaysStrict": true,
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
